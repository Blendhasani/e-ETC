@model State

@{
	ViewData["Title"] = "Fshij shtetin";
}

<div class="row text">
	
	<div class="col-md-8 offset-2">
		<p>
		<h1>Fshij Shtetin</h1>
	</p>
<div class="row mt-2">
	<div class="col-md-8 offset-2 ">
		<form asp-action="Delete" class="mt-4">
