@using eETC.Data.Enum
@using eETC.Data.ViewModels;
@model NewADVM

@{
    ViewData["Title"] = "Te dhenat";


}



<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Plotesoni te dhenat tuaja :</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Perfundimi" asp-controller="AdditionalDatas">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Qyteti" class="control-label"></label>
                                <input asp-for="Qyteti" class="form-control" />
                                <span asp-validation-for="Qyteti" class="text-danger"></span>
                            </div>
                           
                            <div class="form-group">
                                <label asp-for="Rruga" class="control-label"></label>
                                <input asp-for="Rruga" class="form-control" />
                                <span asp-validation-for="Rruga" class="text-danger"></span>
                            </div>
                              <div class="form-group">
                                <label asp-for="NrTel" class="control-label"></label>
                                <input asp-for="NrTel" class="form-control" />
                                <span asp-validation-for="NrTel" class="text-danger"></span>
                            </div>
                       
                          
                          
                        </div>
                        <div class="col-md-6">
                           
                            <div class="form-group">
                                <label asp-for="MenyraPageses" class="control-label"></label>
                                <select asp-for="MenyraPageses" class="form-control" asp-items="Html.GetEnumSelectList<MenyraPageses>()"></select>
                                <span asp-validation-for="MenyraPageses" class="text-danger"></span>
                            </div>
                           
                        </div>
                       
                    </div>


                    <div class="form-group">
                        <input type="submit" value="Vazhdo" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Shfaq te gjitha</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

